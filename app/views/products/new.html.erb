<h1>New Product</h1>

<%= form_for :product, url: products_path do |p| %>
  <p>
    <%= p.label :name %><br>
    <%= p.text_field :name %>
  </p>
 
  <p>
    <%= p.label :description %><br>
    <%= p.text_area :description %>
  </p>
  <p>
    <%= p.label :price %><br>
    <%= p.text_field :price %>
  </p>
  
 
  <p>
    <%= p.submit %>
 </p>
<% end %>


<%= link_to 'Back', products_path %>
