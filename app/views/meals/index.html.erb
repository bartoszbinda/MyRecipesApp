<h1>Menu</h1>
 <% if user_signed_in? %>

<table class="table-striped table">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th colspan="2"></th>
  </tr>
 
  <% @meals.each do |meal| %>
    <tr>
      <td><%= meal.id%></td>
      <td><%= meal.name %></td>
      <td><%= meal.description %></td>
      <td><%= meal.price %></td>
      <td><button type="button" class="btn btn-warning btn-xs top"><%= link_to 'Edit', edit_meal_path(meal) %></button></td>
       <td><button type="button" class="btn btn-danger btn-xs top"><%= link_to 'Destroy', meal_path(meal),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  
</table>
<button type="button" class="btn btn-info"><%=link_to 'Add new meal', 'meals/new' %></button>
<% else %>
<h1> Access denied!</h1>
<% end %>